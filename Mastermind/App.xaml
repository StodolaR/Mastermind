                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Duration="0:0:1" From="353" To="365" Storyboard.TargetProperty="(Canvas.Bottom)"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding ShowPins}" Value="12">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Duration="0:0:1" From="383" To="395" Storyboard.TargetProperty="(Canvas.Bottom)"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
